<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="@dimen/marginStyle"
    android:layout_marginLeft="@dimen/marginStyle"
    android:layout_marginRight="@dimen/marginStyle"
    android:orientation="vertical"
    android:background="@color/gray_transparent"
    android:padding="10dp">

    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Wind"
        android:textColor="#ffff"
        android:textSize="20sp" />


        <TextView
            android:layout_gravity="center"
            android:id="@+id/mSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="11"
            android:textColor="#ffff"
            android:textSize="25sp" />




    <ImageView
        android:layout_gravity="center"
        android:id="@+id/mAnimation"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/fan1" />


</LinearLayout>